<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="description" content="Welephant is a mobile flea-market app that lets you buy and sell stuff nearby.">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Welephant" %></title>
    
    <!--Adobe Typekit Europa Font-->
    <script type="text/javascript" src="//use.typekit.net/are1jzk.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>

    <link rel="shortcut icon" type="image/icon" href="../img/favicon.ico">

  </head>
  
  <body class="<%= page_classes %>">
    <div id="main" role="main">
      <%= partial "partials/lang" %>
      <%= yield %>
      <%= partial "partials/footer" %>
    </div>

  <!--GOOGLE ANALYTICS-->
  
